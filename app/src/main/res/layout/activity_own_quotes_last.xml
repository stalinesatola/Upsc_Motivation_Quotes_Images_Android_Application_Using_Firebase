<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/tools"
    android:background="#A8C23030"
    android:layout_height="match_parent">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A8C23030"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner">
    </com.google.android.gms.ads.AdView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/adView"
        android:layout_above="@+id/ll"
        android:background="#A8C23030"
        android:gravity="center"
        android:layout_height="400sp">


   <ScrollView
       android:id="@+id/scroll"
       android:layout_width="match_parent"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"
       android:layout_margin="5sp"
       android:layout_height="wrap_content"
       android:background="#A8C23030">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_above="@+id/ll"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:gravity="center"
        android:paddingTop="50sp"
        android:paddingBottom="50sp"
        android:orientation="vertical"
        android:layout_height="400sp"
        android:background="#000000">


        <TextView
            android:id="@+id/quote"
            android:background="#000000"
            android:padding="5sp"
            android:textColor="#ffffff"
            android:scaleType="fitXY"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="ahsgggfajhgfHGFJGFJGFJSGJFGSJGFSGFJSGFHSGFJSGHSJFGSJGFJHVGHJFDGVHJHJGDGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGGG"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/name"
            android:background="#000000"
            android:padding="10sp"
            android:textColor="#ffffff"
            android:scaleType="fitXY"
            android:textSize="18sp"
            android:text="Giriraj Nagar"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

   </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3sp">

        <ImageView
            android:id="@+id/left"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_leftarrow" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_share_app" />


        <ImageView
            android:id="@+id/right"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:padding="4dp"
            android:src="@drawable/ic_rightarrow" />


    </LinearLayout>


</RelativeLayout>